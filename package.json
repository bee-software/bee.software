{
  "name": "les-epicuriens-du-logiciel",
  "version": "1.0.0",
  "description": "Notre site web",
  "author": "Les Epicuriens du logiciel",

  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:fperron/les-epicuriens-du-logiciel.git"
  },

  "engines":{
    "node": "0.10.36"
  },

  "dependencies": {
    "http-server": "^0.7.5",
    "normalize.css": "^3.0.2"
  },

  "devDependencies": {
    "digitalocean-api": "^0.1.1",
    "clean-css": "^3.2.5",
    "jshint": "^2.7.0",
    "jasmine": "^2.2.1",
    "zombie": "^2.5.1"
  },

  "scripts": {
    "clean":"rm -rf dist/*",

    "prebuild": "npm run clean -s",
    "build":"npm run build:css -s && npm run build:html -s && npm run build:images -s",
    "build:css": "cleancss src/les-epicuriens-du-logiciel.css > dist/les-epicuriens-du-logiciel.css",
    "build:html": "cp -a src/index.html dist/index.html",
    "build:images": "cp -a src/support dist/",

    "lint": "jshint **/*.js",
    "pretest": "npm run lint -s && npm build",
    "test": "jasmine JASMINE_CONFIG_PATH=build/jasmine.json",

    "deploy:test": "git push test master",
    "deploy:prod": "git push prod master",

    "serve:dev":  "node_modules/http-server/bin/http-server dist -p 5001",
    "serve:test": "node_modules/http-server/bin/http-server dist -p 8080",
    "serve:prod": "node_modules/http-server/bin/http-server dist -p 80"
  }
}
